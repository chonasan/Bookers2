 <main>
    <p id="notice">Welcome! You have signed up successfully.</p>
    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>
          <h2>User info</h2>
          <table class='table'>
            <tr>
               <td><%= attachment_image_tag @book.user_id, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
            </tr>
            <tr>
          	  <th>name</th>
          	  <th><%= @user.name %></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%= @user.introduction %></th>
            </tr>
          </table>
          
          <div class='row'>
            <% if @user.id == current_user.id %>
              <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
          </div>
          
          <h2 class="mt-3">New book</h2>
          <%= form_with(model: @book, local:true) do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <p><%= f.text_field :title %></p>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <p><%= f.text_area :body %></p>
            </div>
            <div class="form-group">
            <%= f.submit 'Create Book' %>
            </div>
          <% end %>
        </div>   
        
        <div class='col-md-8 offset-md-1'>
          <h2>Books</h2>
          <table class='table table-hover table-inverse'>
            
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @book.user_id, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            
          </table>
        </div>
    
      </div>
    </div>
  </main>

