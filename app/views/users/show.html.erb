 <main>
    <% if flash[:notice] %>
    <div class="flash">
    <%= flash[:notice] %>
    </div>
    <% end %>

    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>

           <%= render 'books/list', user: @user, book: @book %>

        </div>

        <div class='col-md-8 offset-md-1'>
          <h2>Books</h2>
          <table class='table table-hover table-inverse'>

            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>

              </tr>
            <% end %>

          </table>
        </div>

      </div>
    </div>
