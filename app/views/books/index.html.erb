 <main>
   
   　<% if @book.errors.any? %>
      <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
        <% @book.errors.full_messages.each do |message| %>
        <p>・<%= message %></p>
        <% end %>
     <% end %>
  
   <p id="notice"></p>
    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>
          <h2>User info</h2>
          <table class='table'>
            <tr>
              <td><%= attachment_image_tag @book.user_id, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
            </tr>
            <tr>
          	  <th>name</th>
          	  <th><%= @user.name %></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%= @user.introduction %></th>
            </tr>
            
          </table>
          
          <% if @user.id == current_user.id %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
          <% end %>

 　　　　　　　　 <h2 class="mt-3">New book</h2>
             
          　<%= form_with model:@book, local:true do |f| %>
          　
              <div class="field">
                <p><label for="book_title">Title</label></p>
                <p><%= f.text_field :title %></p>
              </div>
              
              <div class="field">
                <label for="book_body">Body</label>
                <p><%= f.text_area :body %></p>
              </div>
            
              <h4><%= f.submit 'Create Book' %></h4>
        
           　<% end %>
           　
           　<% @books.each do |book| %>
              <tr>
                <!--< attachment_image_tag 保存先インスタンス名, :保存先カラム名, :サイズ（横幅,高さ）, 画像拡張子, 代替画像 -->
                <td><%= attachment_image_tag @book.user_id, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
           　
           </div>
        </div>
      </div>
  </main>
      
