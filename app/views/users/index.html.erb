 <main>
   <p id="notice"></p>
    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>
          <h2>User info</h2>
          <table class='table'>
            <tr>
              <%= @user.image_id%>
            </tr>
            <tr>
          	  <th>name</th>
          	  <th><%= @user.name %></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%= @user.introduction %></th>
            </tr>
          </table>

 　　　　　　　　 <h2 class="mt-3">New book</h2>
             
          　<%= form_with model:@book, local:true do |f| %>
          　　<% if @book.errors.any? %>
              <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
                <% @book.errors.full_messages.each do |message| %>
                <p>・<%= message %></p>
                <% end %>
               <% end %>
          　
              <div class="field">
                <p><label for="book_title">Title</label></p>
                <p><%= f.text_field :title %></p>
              </div>
              
              <div class="field">
                <label for="book_body">Body</label>
                <p><%= f.text_area :body %></p>
              </div>
              
              <h4><%= f.submit 'Create Book' %></h4>
        
           　<% end %>
           　
             <% @users.each do |user| %>
              <tr>
                <td><%= user.image %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
      
              </tr>
              <% end %>
           　
           </div>
        </div>
      </div>
  </main>
      
　<footer>
    <div class='container mt-5'>
    	<div class='row'>
      	<div class='mx-auto'>
      		<p>CopyRight Infratop.inc</p>
      	</div>
      </div>
    </div>
　</footer>